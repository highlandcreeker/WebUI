@model FBPortal.WebUI.Models.ClientViewModel

@{
    ViewBag.Title = "Invoices";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Invoices</h3>

<div class="container body-content">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>@Html.DisplayNameFor(model => model.Balance)</dt>
                    <dd>@Html.DisplayFor(model => model.Balance)</dd>
                </dl>
            </div>
        </div>
        <div class="panel-body">

            <div class="container">
                <h4>Invoices</h4>
                <table class="table table-striped table-condensed table-hover">
                    <thead>
                        <tr>
                            <td class=".col-md-4">
                                Name
                            </td>
                            <td class=".col-md-4">
                                Vendor
                            </td>
                            <td class=".col-md-4">Date Added</td>
                            <td class=".col-md-4">
                                Amount Paid
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Invoices != null)
                        {
                            foreach (var invoice in Model.Invoices)
                            {
                                <tr>
                                    <td>@invoice.Name</td>
                                    <td>@invoice.Vendor</td>
                                    <td>@invoice.DateAdded</td>
                                    <td>@invoice.AmountPaid.ToString("c")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                @Html.ActionLink("Add Invoice ", "CreateInvoice", new { clientId = @Model.ClientId }) 
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit " + @Model.Name, "Edit", new { id = @Model.ClientId }) |
    @Html.ActionLink("Back to List", "Index")
</p>


